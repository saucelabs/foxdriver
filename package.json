{
  "name": "foxdriver",
  "version": "1.0.4",
  "author": "Christian Bromann <christian@saucelabs.com>",
  "description": "Foxdriver is a Node library which provides a high-level API to control Firefox over the Remote Debugging Protocol",
  "license": "Apache-2.0",
  "homepage": "https://github.com/saucelabs/foxdriver#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saucelabs/foxdriver.git"
  },
  "keywords": [
    "firefox",
    "remote",
    "debugging",
    "debug",
    "protocol",
    "cdp",
    "devtools"
  ],
  "bugs": {
    "url": "https://github.com/saucelabs/foxdriver/issues"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "run-s clean compile",
    "ci": "run-s eslint test:unit:cover",
    "clean": "rm -rf ./build",
    "compile": "babel lib/ -d build/ --copy-files --ignore config --source-maps inline",
    "eslint": "eslint ./lib/**/*.js",
    "release": "release-it --github.release",
    "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major",
    "test": "run-p test:*",
    "test:lint": "eslint ./lib ./test",
    "test:unit": "BABEL_ENV=test jest",
    "test:unit:cover": "BABEL_ENV=test jest --coverage",
    "watch": "npm run compile -- --watch"
  },
  "dependencies": {
    "fs-extra": "^9.0.1",
    "get-port": "^5.1.1",
    "npmlog": "^4.1.2",
    "safe-buffer": "^5.2.1",
    "tcp-port-used": "^1.0.1",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.1.5",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^24.7.1",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "firefox-profile": "^1.2.0",
    "geckodriver": "^1.20.0",
    "jest": "^24.7.1",
    "np": "^6.4.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^14.3.0",
    "sinon": "^9.0.0",
    "webdriverio": "^6.1.16"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 48,
        "functions": 83,
        "lines": 72,
        "statements": 71
      }
    },
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules/"
    ]
  }
}
