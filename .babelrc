{
  "presets": [
    ["@babel/preset-env", {
      "targets": {
        "node": "8"
      }
    }]
  ],
  "plugins": [
    "add-module-exports",
    "transform-class-properties",
    "@babel/plugin-transform-runtime",
    "@babel/plugin-proposal-function-bind",
    "@babel/plugin-proposal-class-properties"
  ],
  "env": {
    "test": {
      "plugins": ["rewire"]
    }
  }
}
